{
  "name": "hoi-mobile-automation",
  "version": "1.0.0",
  "description": "Mobile automation framework for HOI app using WebdriverIO",
  "main": "index.js",
  "scripts": {
    "test:android": "wdio run config/wdio.android.conf.ts",
    "test:ios": "wdio run config/wdio.ios.conf.ts",
    "test:android:dev": "wdio run config/wdio.android.conf.ts --env=dev",
    "test:android:qa": "wdio run config/wdio.android.conf.ts --env=qa",
    "test:android:stage": "wdio run config/wdio.android.conf.ts --env=stage",
    "test:android:prod": "wdio run config/wdio.android.conf.ts --env=prod",
    "test:ios:dev": "wdio run config/wdio.ios.conf.ts --env=dev",
    "test:ios:qa": "wdio run config/wdio.ios.conf.ts --env=qa",
    "test:ios:stage": "wdio run config/wdio.ios.conf.ts --env=stage",
    "test:ios:prod": "wdio run config/wdio.ios.conf.ts --env=prod",
    "test:smoke": "wdio run config/wdio.android.conf.ts --spec='src/tests/smoke/**/*.spec.ts'",
    "test:regression": "wdio run config/wdio.android.conf.ts --spec='src/tests/regression/**/*.spec.ts'",
    "test:sanity": "wdio run config/wdio.android.conf.ts --spec='src/tests/sanity/**/*.spec.ts'",
    "report:allure": "allure generate reports/allure-results --clean -o reports/allure-report && allure open reports/allure-report",
    "report:allure:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "report:allure:open": "allure open reports/allure-report",
    "clean": "rm -rf reports/allure-results/* reports/allure-report/* node_modules/.cache"
  },
  "keywords": [
    "webdriverio",
    "mobile-automation",
    "appium",
    "typescript",
    "android",
    "ios"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.8",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@wdio/allure-reporter": "^8.24.0",
    "@wdio/appium-service": "^8.24.0",
    "@wdio/cli": "^8.24.0",
    "@wdio/local-runner": "^8.24.0",
    "@wdio/mocha-framework": "^8.24.0",
    "@wdio/spec-reporter": "^8.24.0",
    "eslint": "^8.54.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  }
}
